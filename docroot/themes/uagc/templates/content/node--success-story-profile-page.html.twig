{{ attach_library('uagc/main') }}
{{ attach_library('uagc/success-story-profile') }}

<section class="success-story-profile">
    <div class="success-story-profile__header">
    {% set imageURL = file_url(node.field_featured_image.0.entity.field_media_image.0.entity.uri.0.value) %}
  
        <div class="success-profile-header">
            <div class="success-profile-header__image-wrapper">
                <img src="{{node.field_featured_image.0.entity.field_media_image.0.entity.uri.0.value |image_style('success_story_400x400') }}" class="success-profile-header__image" alt="">
            </div>
            <div class="success-profile-header__content-wrapper">
                <h1 class="success-profile-header__header">{{ content.field_header_text }}</h1>
                <div class="success-profile-header__degrees-wrapper">
                {% for item in content.field_success_stories_degrees['#items'] %}  
                    <div class="success-profile-header__degree">
                    <div class="success-profile-header__degree-year">{{ item.entity.field_year.value }}</div>
                    <div class="success-profile-header__degree-name">{{ item.entity.field_degree_achieved.entity.title.value }}</div>
                    </div>
                {% endfor %}
                </div>
            </div>
            </div>
    </div>
    <div class="success-story-profile__body">
        <div class="success-story-profile__sidebar">
            
        <div class="success-sidebar-quote">
            <div class="success-sidebar-quote__quote">
                {% autoescape false %}
                    "{{ content.field_quote_content.0 }}"
                {% endautoescape %}
            </div>
            <div class="success-sidebar-quote__red-bar"></div>
        </div>
        </div>
        <div class="success-story-profile__content">
            <div class="success-story-profile__content-section">
                <div class="success-story-profile__content-section-wizzywig">
                <h2 class="success-story-profile__biography">Biography</h2>
                    {{content.body}}
                </div>
            </div>
            {{ content.field_paragraphs }}
        </div>
    </div>
</section>