
<div class="related-articles-block__header">
  <h2 class="related-articles-block__header-title">Related Articles</h2>
</div>
<ul class="related-articles-block__items">
{% for key,row in rows %}
    {% set row_classes = [
        'related-articles-block__item',
        default_row_class
    ] %}
    <li {{ row.attributes.addClass(row_classes) }}>
    <article class="related-articles-block__article">
      <div class="related-articles-block__image">
        {% if row.content['#row']._entity.field_featured_image is not empty %}
          <a href="{{ view.style_plugin.getField(loop.index0, 'view_node') }}">
            {% if row.content['#row']._entity.field_featured_image.entity.field_media_image.alt %}
              <img src="{{row.content['#row']._entity.field_featured_image.entity.field_media_image.entity.uri.value | image_style('floating_image_520x440')}}" loading="lazy" typeof="foaf:Image" alt="{{row.content['#row']._entity.field_featured_image.entity.field_media_image.alt}}">
            {% else %}
              <img src="{{row.content['#row']._entity.field_featured_image.entity.field_media_image.entity.uri.value | image_style('floating_image_520x440')}}" loading="lazy" typeof="foaf:Image" alt="{{view.style_plugin.getField(key, 'title')}}">
            {% endif %}
          </a>
        {% endif %}
      </div>
      <div class="related-articles-block__categories">
        {{ view.style_plugin.getField(key, 'field_article_category') }}
      </div>
      <span class="related-articles-block__title">
        <a href="{{ view.style_plugin.getField(loop.index0, 'view_node') }}">
          {{ view.style_plugin.getField(key, 'title') }}
        </a>
      </span>
      <div class="related-articles-block__info">
        <div class="related-articles-block__pub">
          {{ view.style_plugin.getField(key, 'last_updated') }}
        </div>
        {% set read = view.style_plugin.getField(key, 'field_read_length') %}
        {% if read|length > 1 %}
        <div class="related-articles-block__read">
          {{ read }}
        </div>
        {% endif %}

      </div>
      </article>
    </li>

{% endfor %}
</ul>